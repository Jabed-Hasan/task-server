{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,

    // Folder settings
    "rootDir": ".",
    "outDir": "./dist",

    // Extras
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": false,
    "resolveJsonModule": true
  },

  "include": [
    "src/**/*",
    "api/**/*",
    "ormconfig.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
